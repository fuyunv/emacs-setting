#!private profile

# grep in .git dir
function ggrep()
{
    if [ -d "./.git" ] ; then
        find . -name .repo -prune -o -name .git -prune -o  -type f -name "*\.*" -print0 | xargs -0 grep --color -n "$@"
    else
        echo "not a git dir."
    fi
}

function dgrep()
{
	grep "$@" -nr .
}

function dfind()
{
	find . -name "$@"
}

function chgrep()
{
	find . -name "*.[ch]" | xargs -n 1 grep --color=auto -Hnr "$@"
}


function findSymbolFromSo() {
    for lib in `ls *`
    do
        cmd="nm ${lib} 2>/dev/null | grep $@"
        res=`eval ${cmd}`
        if [ "" != "$res" ]; then
            echo "$lib"
            echo "$res"
        fi
    done
}

alias ec='emacsclient -c $@'